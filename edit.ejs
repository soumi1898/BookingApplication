<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
</head>
<body>
  <h1>Edit User</h1>
  <form action="/editUser/<%= user.id %>" method="post">
    <!-- Display form with user details for editing -->
    <label for="userName">Username:</label>
    <input type="text" id="userName" name="userName" value="<%= user.userName %>" required>

    <label for="emailId">Email:</label>
    <input type="email" id="emailId" name="emailId" value="<%= user.emailId %>" required>

    <label for="phoneNumber">Phone Number:</label>
    <input type="tel" id="phoneNumber" name="phoneNumber" value="<%= user.phoneNumber %>" required>

    <button type="submit">Update</button>
  </form>
</body>
</html>